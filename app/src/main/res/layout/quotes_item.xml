<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtQuotes"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingHorizontal="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingVertical="@dimen/_10sdp"
                android:fontFamily="sans-serif-condensed-medium"
                android:alpha="0.6"
                app:layout_constraintBottom_toTopOf="@id/txtQuotesAuthor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/success_is"
                android:textSize="@dimen/_14sdp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtQuotesAuthor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/icShare"
                android:paddingHorizontal="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/txtQuotes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Winston S. Churchill"
                android:textSize="@dimen/_14sdp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtQuotesAuthor"
                app:layout_constraintEnd_toEndOf="parent"
                android:tint="@color/black"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@id/icCopy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@android:drawable/ic_menu_share"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/icShare"
                app:layout_constraintBottom_toBottomOf="@id/icShare"
                app:layout_constraintEnd_toStartOf="@id/icShare"
                android:tint="@color/black"
                app:layout_constraintStart_toEndOf="@id/icSave"
                app:srcCompat="@android:drawable/ic_menu_week"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/icShare"
                app:layout_constraintBottom_toBottomOf="@id/icShare"
                app:layout_constraintEnd_toStartOf="@id/icCopy"
                android:tint="@color/black"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@id/emptyView"
                app:srcCompat="@android:drawable/ic_menu_save"/>

            <View
                android:id="@+id/emptyView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/icShare"
                app:layout_constraintBottom_toBottomOf="@id/icShare"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/icSave"/>
            
            
        </androidx.constraintlayout.widget.ConstraintLayout>
        
        
        
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>